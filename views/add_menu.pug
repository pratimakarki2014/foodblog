extends layout

block content
    h1 #{title}
    form(method='post', action='/menus/add')
        .form-group
            label Title:
            input(name='title', type='text')
        .form-group
            label Description:
            textarea(name='description')
        .form-group
            label Ingredients:
            textarea(name='ingredients')
        input(type='submit', name='submit', value='Save')
        a(href='/manage/menus') Back

