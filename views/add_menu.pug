extends layout

block content
   .container
    h1 #{title}
    form(method='post', action='/menus/add')
        .form-group
            label Title:
            input.form-control(name='title', type='text')
        .form-group
            label Description:
            textarea.form-control(name='description')
        .form-group
            label Ingredients:
            textarea.form-control(name='ingredients')
        input.btn.btn-primary(type='submit', name='submit', value='Save')
        a.btn.btn-warning(href='/manage/menus') Back

